<link href="~/Content/product.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/product.js"></script>

@model IEnumerable<SellPhone.Models.Product>
@{
    ViewBag.Title = @Model.First().Name;
}

<input id="prodId" value="@Model.First().ID" type="hidden">

<a href="@Url.Action("Index", "cart")">
    <div id="cart-view">
        Cart: <span>@Session["cart"].ToString()</span>
    </div>
</a>

<h2>@Model.First().Name</h2>

<img src="@Model.First().Image" style="object-fit: cover; width: 100px; height: 120px" />

<h3>@String.Format("{0:#,#.}", Model.First().Price) VND</h3>


<div class="quantity">
    <button class="minus-btnn" id="minus-btnn" type="button" name="button">
        -
    </button>
    <input id="cart-value" type="reset" name="name" value="1">
    <button class="plus-btnn" id="plus-btnn" type="button" name="button">
        +
    </button>
</div>
<button id="add-to-cart">Add to cart</button>

<p>@Model.First().Description</p>